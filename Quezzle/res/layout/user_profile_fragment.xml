<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pink_bg">

    <ImageView
        android:id="@+id/avatarView_profileScreen"
        android:layout_width="@dimen/d100p"
        android:layout_height="@dimen/d100p"
        android:layout_marginBottom="@dimen/d10p"
        android:layout_centerInParent="true"
        android:src="@drawable/def_icon" />

    <TextView
        android:id="@+id/nameText_profileScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/avatarView_profileScreen"
        android:text="User Name"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/save_profileScreen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/save" />
</RelativeLayout>