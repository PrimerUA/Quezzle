<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg"
    tools:context="com.skylion.quezzle.ChatsListActivity" >
    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/create_button"
        android:text="@string/edit_profile"
        android:textStyle="bold" />
    <Button
        android:id="@+id/createButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/editProfileButton"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:background="@drawable/create_button"
        android:text="@string/create"
        android:textStyle="bold" />
    <ListView
        android:id="@+id/chatsList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@id/createButton"
        android:layout_alignParentRight="true"
        android:background="@drawable/kolba"
        android:divider="#ffffff"
        android:dividerHeight="@dimen/d2p" />
</RelativeLayout>